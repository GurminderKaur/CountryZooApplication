@model Animal
@{ 
    ViewBag.Title = "Create Animal";

}

<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Species"  class="col-sm-2 col-form-label"></label>
        <input asp-for="Species"  class="form-control" placeholder="Species"/>
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Weight" class="col-sm-2 col-form-label"></label>
        <input asp-for="Weight" type="number" step="0.01" class="form-control" placeholder="Weight" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <button type="submit"class="btn btn-primary">Submit</button>
    </div>
</form>